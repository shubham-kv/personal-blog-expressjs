<section class="flex flex-col gap-4">
  {{#each blogs}}
  <article>
    <div>
      <h3 class="text-xl">{{this.title}}</h3>
      <p class="text-sm font-light">{{this.publishDate}}</p>
    </div>

    <div>
      <a class="text-base font-light hover:underline" href="/blogs/{{this.id}}">Read more</a>
    </div>
  </article>
  {{/each}}
</section>